	<!-- DISTANCE CONVERTER -->

	<div class="converter distance">
		<h1>Distance Converter</h1>
		<div class="center">
			<table class="table" id="distance">
				<tr>
					<td><span id="to"> FROM </span></td>	
					<td>
						<select class="dropdown sel1">
						  <option value="0">Inches</option>
						  <option value="1">Feet</option>
						  <option value="2">Yards</option>
						  <option value="3">Mile</option>
						  <option value="4">Millimetres</option>
						  <option value="5">Centimetres</option>
						  <option value="6">Metre</option>
						  <option value="7">kilometre</option>
						</select>
					</td>
						<td><input type="text" name="bob" class="field field1"></td>
				</tr>
				<tr>
						<td><span id="to"> TO </span></td>					
					<td>
						<select class="dropdown sel2">
						  <option value="0">Inches</option>
						  <option value="1">Feet</option>
						  <option value="2">Yards</option>
						  <option value="3">Mile</option>
						  <option value="4">Millimetres</option>
						  <option value="5">Centimetres</option>
						  <option value="6">Metre</option>
						  <option value="7">kilometre</option>
						</select>
					</td>
					<td><input type="text" name="bab" class="field field2" disabled></td>
					<td><input type="button" value="Calculate" class="btn"></td>
				</tr>
			</table>
		</div>
	</div>

